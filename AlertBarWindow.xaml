<Window x:Class="GridBanner.AlertBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False">
    <Window.Resources>
        <SolidColorBrush x:Key="SubBarFlashBrush" Color="#FF0000" Opacity="0.0"/>
        <Storyboard x:Key="SubBarFlashStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="FlashRect"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0" To="0.30"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="PulseBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0.15" To="0.90"
                             Duration="0:0:0.55"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="{Binding BackgroundBrush}">
        <Grid>
            <!-- SuperCritical-only flash/pulse overlay (kept invisible for other levels) -->
            <Rectangle x:Name="FlashRect"
                       Fill="{StaticResource SubBarFlashBrush}"
                       Opacity="0.0"/>
            <Border x:Name="PulseBorder"
                    BorderBrush="{Binding ForegroundBrush}"
                    BorderThickness="4"
                    CornerRadius="0"
                    Opacity="0.0"/>

            <Grid Margin="16,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Summary}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>

            <Button Grid.Column="1"
                    Content="View Details"
                    Margin="12,0,8,0"
                    Padding="10,4"
                    Click="ViewDetails_Click"
                    VerticalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="X"
                    Width="28"
                    Height="22"
                    Padding="0"
                    Click="Dismiss_Click"
                    VerticalAlignment="Center"
                    Visibility="{Binding DismissVisibility}"/>
        </Grid>
        </Grid>
    </Border>

</Window>


