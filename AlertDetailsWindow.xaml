<Window x:Class="GridBanner.AlertDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert Details"
        Width="700"
        Height="450"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{Binding BackgroundBrush}" Padding="14">
            <TextBlock Text="{Binding Header}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="20"
                       FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="14" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       FontSize="15"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="14">
            <Button Content="Close" Width="90" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>


