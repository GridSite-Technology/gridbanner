<Window x:Class="GridBanner.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False">
    <!-- Single-row banner: username (left) | classification (center) | org (right) | compliance badge (far right) -->
    <Grid Margin="16,0" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding ComputerName}"
                       Foreground="{Binding ForegroundColor}"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="  "
                       Foreground="{Binding ForegroundColor}"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Username}"
                       Foreground="{Binding ForegroundColor}"
                       FontSize="17"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Column="1"
                   Text="{Binding ClassificationLevel}"
                   Foreground="{Binding ForegroundColor}"
                   FontSize="21"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <TextBlock Grid.Column="2"
                   Text="{Binding OrgName}"
                   Foreground="{Binding ForegroundColor}"
                   FontSize="17"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>

        <Border Grid.Column="3"
                Background="{Binding ComplianceBackground}"
                CornerRadius="4"
                Padding="10,4"
                VerticalAlignment="Center"
                Visibility="{Binding ComplianceVisibility}">
            <TextBlock Text="{Binding ComplianceText}"
                       Foreground="#FFFFFF"
                       FontSize="12"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

