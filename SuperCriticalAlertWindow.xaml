<Window x:Class="GridBanner.SuperCriticalAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="True"
        Background="{Binding BackgroundBrush}">
    <Window.Resources>
        <!-- Flash overlay (independent of configured background color) -->
        <SolidColorBrush x:Key="FlashBrush" Color="#FF0000" Opacity="0.0"/>
        <Storyboard x:Key="FlashStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="FlashRect"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0" To="0.35"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="HeaderScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1.0" To="1.04"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="HeaderScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1.0" To="1.04"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="PulseBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0.25" To="1.0"
                             Duration="0:0:0.55"/>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FlashStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Attention-grabbing flashing overlay + pulsing border -->
        <Rectangle x:Name="FlashRect"
                   Grid.RowSpan="3"
                   Fill="{StaticResource FlashBrush}"
                   Opacity="0.0"/>
        <Border x:Name="PulseBorder"
                Grid.RowSpan="3"
                BorderBrush="{Binding ForegroundBrush}"
                BorderThickness="8"
                CornerRadius="12"
                Opacity="0.25"/>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Header}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="56"
                       FontWeight="Bold"
                       TextWrapping="Wrap">
                <TextBlock.RenderTransform>
                    <ScaleTransform x:Name="HeaderScale" ScaleX="1.0" ScaleY="1.0"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <Button Grid.Column="1"
                    Content="X"
                    Width="44"
                    Height="44"
                    FontSize="18"
                    Margin="20,0,0,0"
                    Click="Close_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="0,24,0,24" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Message}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="28"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <TextBlock Grid.Row="2"
                   Text="This is a SUPER CRITICAL alert. The top banner cannot be dismissed. This full-screen view can be closed locally."
                   Foreground="{Binding ForegroundBrush}"
                   FontSize="16"
                   Opacity="0.9"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>


