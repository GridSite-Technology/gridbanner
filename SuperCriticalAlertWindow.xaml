<Window x:Class="GridBanner.SuperCriticalAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="True"
        Background="{Binding BackgroundBrush}">
    <Window.Resources>
        <!-- Flash overlay (independent of configured background color) -->
        <SolidColorBrush x:Key="FlashBrush" Color="#FF0000" Opacity="0.0"/>
        <Storyboard x:Key="FlashStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="FlashRect"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0" To="0.35"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="HeaderScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1.0" To="1.04"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="HeaderScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1.0" To="1.04"
                             Duration="0:0:0.55"/>
            <DoubleAnimation Storyboard.TargetName="PulseBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0.25" To="1.0"
                             Duration="0:0:0.55"/>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FlashStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>
    <!-- ClipToBounds ensures the pulsing header never draws over the border -->
    <Grid Margin="40" ClipToBounds="True">
        <!-- Attention-grabbing flashing overlay + pulsing border -->
        <Rectangle x:Name="FlashRect"
                   Fill="{StaticResource FlashBrush}"
                   Opacity="0.0"/>
        <Border x:Name="PulseBorder"
                BorderBrush="{Binding ForegroundBrush}"
                BorderThickness="8"
                CornerRadius="12"
                Opacity="0.25"/>

        <!-- Inner content padding keeps text safely inside the border -->
        <Grid Margin="26">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock
                           Text="{Binding Header}"
                           Foreground="{Binding ForegroundBrush}"
                           FontSize="56"
                           FontWeight="Bold"
                           TextWrapping="Wrap">
                    <TextBlock.RenderTransform>
                        <ScaleTransform x:Name="HeaderScale" ScaleX="1.0" ScaleY="1.0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>

            <ScrollViewer Grid.Row="1" Margin="0,24,0,18" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Message}"
                           Foreground="{Binding ForegroundBrush}"
                           FontSize="28"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

            <Button Grid.Row="2"
                    Content="Acknowledge"
                    Width="260"
                    Height="56"
                    FontSize="22"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Acknowledge_Click"/>
        </Grid>
    </Grid>
</Window>


