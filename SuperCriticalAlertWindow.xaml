<Window x:Class="GridBanner.SuperCriticalAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="True"
        Background="{Binding BackgroundBrush}">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Header}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="56"
                       FontWeight="Bold"
                       TextWrapping="Wrap"/>

            <Button Grid.Column="1"
                    Content="X"
                    Width="44"
                    Height="44"
                    FontSize="18"
                    Margin="20,0,0,0"
                    Click="Close_Click"/>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="0,24,0,24" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Message}"
                       Foreground="{Binding ForegroundBrush}"
                       FontSize="28"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <TextBlock Grid.Row="2"
                   Text="This is a SUPER CRITICAL alert. The top banner cannot be dismissed. This full-screen view can be closed locally."
                   Foreground="{Binding ForegroundBrush}"
                   FontSize="16"
                   Opacity="0.9"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>


