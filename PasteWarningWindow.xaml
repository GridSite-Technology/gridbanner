<Window x:Class="GridBanner.PasteWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paste Blocked - Sensitivity Warning" 
        Height="400" Width="600"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize">
    <Border Background="#FF2D2D30" 
            CornerRadius="8" 
            BorderThickness="2" 
            BorderBrush="#FF0078D4"
            Effect="{StaticResource DropShadow}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="âš  Paste Blocked" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FFFF6B6B"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Sensitivity level mismatch detected" 
                           FontSize="14" 
                           Foreground="#FFCCCCCC"/>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="You attempted to paste content with a higher sensitivity level into a destination with a lower sensitivity level." 
                           TextWrapping="Wrap" 
                           Foreground="#FFCCCCCC" 
                           Margin="0,0,0,20"/>

                <Border Background="#FF1E1E1E" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Source:" 
                                   FontWeight="Bold" 
                                   Foreground="#FF0078D4" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="SourceInfo" 
                                   TextWrapping="Wrap" 
                                   Foreground="#FFCCCCCC"/>
                    </StackPanel>
                </Border>

                <Border Background="#FF1E1E1E" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Destination:" 
                                   FontWeight="Bold" 
                                   Foreground="#FFFF6B6B" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="DestinationInfo" 
                                   TextWrapping="Wrap" 
                                   Foreground="#FFCCCCCC"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton" 
                        Content="OK" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Click="OkButton_Click"
                        Background="#FF0078D4" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
