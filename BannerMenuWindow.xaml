<Window x:Class="GridBanner.BannerMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridBanner Menu"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Background="#F0F0F0"
        BorderBrush="#CCCCCC"
        BorderThickness="1">
    <StackPanel Margin="10">
        <Button Name="TerminateButton"
                Content="Terminate"
                Width="150"
                Height="35"
                Margin="0,0,0,5"
                Click="TerminateButton_Click"
                Visibility="Collapsed"/>
        <Button Name="LogsButton"
                Content="View Logs"
                Width="150"
                Height="35"
                Margin="0,0,0,5"
                Click="LogsButton_Click"/>
        <Button Name="AboutButton"
                Content="About"
                Width="150"
                Height="35"
                Click="AboutButton_Click"/>
    </StackPanel>
</Window>

